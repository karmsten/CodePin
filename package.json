{
  "name": "codepin",
  "displayName": "CodePin",
  "description": "Pin tasks and issues directly in the codebase and assign them to team members.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codepin.createTask",
        "title": "CodePin: Create Task",
        "category": "CodePin"
      },
      {
        "command": "codepin.deleteTask",
        "title": "CodePin: Delete Task",
        "category": "CodePin"
      },
      {
        "command": "codepin.updateTask",
        "title": "CodePin: Update Task",
        "category": "CodePin"
      },
      {
        "command": "codepin.showAllTasks",
        "title": "CodePin: Show All Tasks",
        "category": "CodePin"
      },
      {
        "command": "codepin.editTaskNotes",
        "title": "CodePin: Edit Task Notes",
        "category": "CodePin"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "codepin.editTaskNotes",
          "when": "view == codepinTasks && viewItem == taskNotes"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codepin-sidebar",
          "title": "CodePin",
          "icon": "resources/codepin.svg"
        }
      ]
    },
    "views": {
      "codepin-sidebar": [
        {
          "id": "codepinTasks",
          "name": "Tasks"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "testtwo": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@octokit/rest": "^19.0.7"
  }
}
